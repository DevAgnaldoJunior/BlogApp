{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}



<div class="card">
    <div class="card-body">
        <h4>Nova postagem:</h4>
        <form id="postagemForm" action="/admin/postagens/nova" method="POST"> <!--Rota que ele vai mandar os dados-->
            <label for="titulo">Título:</label>
            <input type="text" id="titulo" name="titulo" class="form-control" required>

            <label for="slug">Slug:</label>
            <input type="text" id="slug" name="slug"  class="form-control" required>

            <label for="descricao">Descrição:</label>
            <input type="text" id="descricao" name="descricao"  class="form-control" required>

            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" id="conteudo" class="form-control" required></textarea>

            <label for="categoria">Categoria</label>
            <select name="categoria" id="categoria" class="custom-select mt-4">
                {{#each categorias}}

                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select> 
                <br>
            <button class="btn btn-success mt-4" type="submit">Criar postagem</button>

        </form>
    </div>

   
</div>